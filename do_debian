#!/bin/sh

# Create archive
qmake CONFIG+=release .
make dist
make distclean

# Give it a debian name
rename "s/trabucco/trabucco_/" *.tar.gz
rename "s/.tar.gz/.orig.tar.gz/" *.tar.gz

ARCHIVE=$(ls *.orig.tar.gz)

# Remove Qt crap from the archive
TMPDIR=$(mktemp -d)
mv $ARCHIVE $TMPDIR
cd $TMPDIR
tar -xf *
rm -rf $(find | grep /usr)
rm $ARCHIVE
tar -czf $ARCHIVE *
cd -
mv $TMPDIR/$ARCHIVE .

# Sign the archive
gpg --sign --armor --detach-sign *.orig.tar.gz

T=$(mktemp -d)
U=$(mktemp -d)
mv *.tar.gz $T

cd $T
tar -xvvf *
cd -

mv $T/*tar.gz $U

UNCOMPRESSED=$(realpath $T/*)
mv $U/* $T/
mv *.tar.gz* $T/

rmdir $U

git checkout debian
cp -r debian/ $UNCOMPRESSED/
git checkout -

cd $UNCOMPRESSED
dpkg-buildpackage
echo $UNCOMPRESSED

